<header>
<h1> ADMIN CONTROLS </h1>


</header>



<body>

<h2>Create New Trail:</h2>

<%= form_with model: @trail do |form| %>
  <createtrail>
    <%= form.label :title %><br>
    <%= form.text_field :name %>
  </createtrail>


  <div>
    <%= form.submit %>
  </div>
<% end %>







<% Trail.all.each do | t | %>
  <div> <%= link_to(t.name,admin_show_path(t))%> </div>
  <div> Nodes: </div>
  <% t.nodes.each do | node | %>
  <div style="margin-left:9px;"> <%= node.id %> - <%= node.question%> </div>
  <% end %>
<% end %>



</body>
<header>
<h1> ADMIN CONTROLS </h1>
 <%= stylesheet_link_tag 'trails.css' %>

</header>



<body>

<h2>Create New Trail:</h2>

<%= form_with model: Trail.new, url: "/admin/trails" do |form| %>
    <createtrail>
    <%= form.label :Name_of_Trail %><br>
    <%= form.text_field :name %>
    </createtrail>


    <div>
    <%= form.submit %>
    </div>
<% end %>







<% Trail.all.each do | t | %>
  <div> <%= link_to(t.name,admin_show_path(t), class: "trail-link")%> </div>
  
  <div> Nodes: </div>
  <% t.nodes.each do | node | %>
  <div style="margin-left:9px;"> <%= node.id %> - <%= node.question%> </div>
  <% end %>
<% end %>



</body>
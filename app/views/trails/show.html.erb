<header>
<h2> <%= @trail.name %> </h2>
</header>


<body>

  <question>
    <% if @current_node %> 
    Current Node: <%= @current_node.question%>
  </question>
  
<form>
    <%= form_with url: check_answer_path, local: true do |f| %>
    <%= f.label :answer %>
    <%= f.text_field :answer %>
    <%= f.hidden_field :node_id, value: @current_node.id %>
    <%= f.submit %>
    
  <% end %>
</form>  

<% else %>
  <div>You've completed the trail!</div>
<% end %>


</body>
